@model Pokemon
@using PokedexApp.Util

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pok√©mon Details</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/details.css" />
</head>

<body>
    <div class="d-flex justify-content-center">
        <div class="container text-center" style="background-color: @PokeColor.GetTypeColor(@Model.Types[0].pokemonType2.Name);">
            <h1>@Model.Name</h1>
            <img src="@Model.Sprite.FrontDefault" alt="@Model.Sprite.FrontShiny" class="img-fluid">
            <p>Height: @Model.Height</p>
            <p>Weight: @Model.Weight</p>
            <p>Base Experience: @Model.BaseExperience</p>
            <div class="type-row d-flex justify-content-center">
                @foreach (var type in Model.Types)
                {
                    <div class="col">
                        <span class="badge mb-2"
                            style="background-color: @PokeColor.GetTypeColor(@type.pokemonType2.Name);">@type.pokemonType2.Name</span>
                    </div>
                }
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
