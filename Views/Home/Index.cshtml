@model List<Pokemon>
@using PokedexApp.Util

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pokédex</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/index.css" />
    <link rel="stylesheet" href="~/css/search-container.css" />
</head>

<body>
    <div class="container">
        <div class="search-container">
            <input type="text" id="search-bar" name="searchQuery" placeholder="Search for a Pokémon"
                oninput="searchPokemon(this.value)">
        </div>
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            @foreach (var pokemon in Model)
            {
                <div class="col">
                    <div class="card"
                        style="background-color: @PokeColor.GetTypeColor(@pokemon.Types[0].pokemonType2.Name);">
                        <a class="navigation-link" href="@Url.Action("Details", new { id = pokemon.Id })">
                            <img src="@pokemon.Sprite.FrontDefault" alt="@pokemon.Sprite.FrontShiny"
                                class="mx-auto d-block">
                            <div class="card-body text-center">
                                <h5 class="card-title">@pokemon.Name</h5>
                                <p class="card-text">ID: @pokemon.Id</p>
                                <p class="card-text">Weight: @pokemon.Weight</p>
                                <p class="card-text">Height: @pokemon.Height</p>
                            </div>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/index.js"></script>
</body>

</html>
